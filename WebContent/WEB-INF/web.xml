<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
    
	<description>
      Vinopedia
    </description>
	<display-name>Vinopedia</display-name>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/DB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!--CharsetFilter start -->

	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>com.freewinesearcher.online.CharsetFilter</filter-class>
		<init-param>
			<param-name>requestEncoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>botcheck</filter-name>
		<filter-class>com.freewinesearcher.online.BotFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/mwine/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/mobile.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/region/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/winery/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/wine/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/store/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/region/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/mregion/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/mwinery/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>botcheck</filter-name>
		<url-pattern>/logerror.jsp</url-pattern>
	</filter-mapping>


	<filter>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
		<!-- <init-param> <param-name>logLevel</param-name> <param-value>DEBUG</param-value> 
			</init-param> -->
	</filter>
	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/logerror.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>

<security-constraint>
        <web-resource-collection>
            <web-resource-name>HTTPSOrHTTP</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
		<display-name>Admin area</display-name>
		<web-resource-collection>
			<web-resource-name>Protected Area</web-resource-name>
			Define the context-relative URL(s) to be protected
			<url-pattern>/admin/*</url-pattern>
			If you list http methods, only those methods are protected

		</web-resource-collection>
		<auth-constraint>
			Anyone with one of the listed roles may access this area
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

    <security-constraint>
		<display-name>Members area</display-name>
		<web-resource-collection>
			<web-resource-name>Members area</web-resource-name>
			Define the context-relative URL(s) to be protected
			<url-pattern>/settings/*</url-pattern>
			If you list http methods, only those methods are protected
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			Anyone with one of the listed roles may access this area
			<role-name>admin</role-name>
			<role-name>user</role-name>
			<role-name>shop</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>Shop area</display-name>
		<web-resource-collection>
			<web-resource-name>Shop area</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/shops/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<!-- Anyone with one of the listed roles may access this area -->
			<role-name>admin</role-name>
			<role-name>shop</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>webdav</display-name>
		<web-resource-collection>
			<web-resource-name>webdav</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/webdav/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<!-- Anyone with one of the listed roles may access this area -->
			<role-name>admin</role-name>
			<role-name>management</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>Moderator area</display-name>
		<web-resource-collection>
			<web-resource-name>Moderator area</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/moderator/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<!-- Anyone with one of the listed roles may access this area -->
			<role-name>admin</role-name>
			<role-name>Moderators</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>

	</security-constraint>

	<security-constraint>
		<display-name>API area</display-name>
		<web-resource-collection>
			<web-resource-name>Moderator area</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/api2/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>

	</security-constraint>



	<security-constraint>
		<display-name>Test area</display-name>
		<web-resource-collection>
			<web-resource-name>Test area</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/testobsolete/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<!-- Anyone with one of the listed roles may access this area -->
			<role-name>admin</role-name>
			<role-name>testuser</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>Probe</display-name>
		<web-resource-collection>
			<web-resource-name>probe</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/probe/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<user-data-constraint>
				<transport-guarantee>CONFIDENTIAL</transport-guarantee>
			</user-data-constraint>
		</web-resource-collection>
	</security-constraint>

	<security-constraint>
		<display-name>Editors</display-name>
		<web-resource-collection>
			<web-resource-name>Editor</web-resource-name>
			<!-- Define the context-relative URL(s) to be protected -->
			<url-pattern>/editor/*</url-pattern>
			<!-- If you list http methods, only those methods are protected -->
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<!-- Anyone with one of the listed roles may access this area -->
			<role-name>admin</role-name>
			<role-name>editor</role-name>
		</auth-constraint>
	</security-constraint>

	<!-- Default login configuration uses form-based authentication -->
 	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Protected Area</realm-name>
		<form-login-config>
			<form-login-page>/settings/login.jsp</form-login-page>
			<form-error-page>/settings/error.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<!-- Security roles referenced by this web application -->
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>management</role-name>
	</security-role>
	<security-role>
		<role-name>Moderators</role-name>
	</security-role>
	<security-role>
		<role-name>shop</role-name>
	</security-role>
	<security-role>
		<role-name>editor</role-name>
	</security-role>
	<security-role>
		<role-name>user</role-name>
	</security-role>
	<security-role>
		<role-name>testuser</role-name>
	</security-role>

