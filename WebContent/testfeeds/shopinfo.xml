  <Requests>
    <OnlineRequest method="POST GET TRACE">
      <Processor>http://www.a-vino.de/elmar_request.php</Processor>
      <ParamBrand>p_brand</ParamBrand>
      <ParamProduct>p_product</ParamProduct>
      <ParamDescription>p_desc</ParamDescription>
      <ParamQuickSearch>p_qs</ParamQuickSearch>
      <ParamPriceBounds>
        <LowerPrice>p_low</LowerPrice>
        <UpperPrice>p_high</UpperPrice>
      </ParamPriceBounds>
      <ParamSize>p_size</ParamSize>
      <ParamIP>p_ip</ParamIP>
    </OnlineRequest>
    <OfflineRequest>
      <UpdateMethods>
        <DirectDownload day="daily"/>
      </UpdateMethods>
      <Format>
        <Tabular>
          <CSV>
            <Url>https://localhost.vinopedia.com:6001/testfeeds/customfeed.xml</Url>
            <Header columns="14">productid	name	brand	offerid	category	description	price	image	url	availability	shipping	special	expirationdate	oldprice</Header>
            <SpecialCharacters delimiter="[tab]"/>
          </CSV>
          <Mappings>
            <Mapping column="1" columnName="productid" type="privateid"/>
            <Mapping column="2" columnName="name" type="name"/>
            <Mapping column="3" columnName="brand" type="brand"/>
            <Mapping column="5" columnName="category" type="type"/>
            <Mapping column="6" columnName="description" type="longdescription"/>
            <Mapping column="7" columnName="price" type="price"/>
            <Mapping column="8" columnName="image" type="pictureurl"/>
            <Mapping column="9" columnName="url" type="url"/>
            <Mapping column="10" columnName="availability" type="deliverable"/>
            <Mapping column="11" columnName="shipping" type="deliverydetails"/>
            <Mapping column="12" columnName="special" type="specialdiscount"/>
          </Mappings>
        </Tabular>
      </Format>
    </OfflineRequest>
  </Requests>
